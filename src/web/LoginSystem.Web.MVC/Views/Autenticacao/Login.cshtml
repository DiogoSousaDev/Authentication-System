@{
    ViewData["Title"] = "Login System";
}

<div class="icon-home">
    <a asp-action="Index" asp-controller="Home"><span class="material-symbols-rounded">house</span></a>
</div>

<div class="box">
    <div class="form">
        <h2>Login</h2>

        <div class="inputBox">
            <input type="text" required="required">
            <span>E-mail</span>
            <i></i>
        </div>

        <div class="inputBox">
            <input type="password" required="required">
            <span>Password</span>
            <i></i>
        </div>

        <div class="links">
            <a href="#">Esqueci a minha password</a>
            <a href="#">Signup</a>
        </div>

        <div class="btn">
            <input class="btn" type="submit" value="Login">
        </div>


    </div>
</div>